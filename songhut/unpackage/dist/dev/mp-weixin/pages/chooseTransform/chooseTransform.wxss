
.form-wrapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 60rpx;
	margin-left: 90rpx;
	width: 570rpx;
}
.form-btn{
	width: 200rpx;
	font-size: 34rpx;
	margin: 0 auto;
}
.my-text{
	font-size: 34rpx;
}
.my-input{
	height: 70rpx;
	padding: 0rpx 25rpx 0rpx 25rpx;
	text-align: center;
	line-height: 70rpx;
	font-size: 32rpx;
	background: #FFF;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	border-radius: 15rpx;
}
.info {
	margin-top: 100rpx;
}
.iconbtn {
	margin-top: 8rpx;
	width: 50rpx;
	height: 50rpx;
}
.audio-wrapper {
	background-color: #FFFFFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-radius: 15rpx;
}
.audio-number {
	font-size: 24rpx;
	line-height: 1;
	color: #000000;
	margin-right: 15rpx;
}
.audio-slider {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin: 0 20rpx;
}
.form-textarea{
	margin-left: 20rpx;
	background-color: #FFFFFF;
	width: 340rpx;
	border-radius: 20rpx;
}



