
.margin-wrap{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 50rpx;
	margin-left: 30rpx;
	width: 690rpx;
}
.title-text{
	font-size: 36rpx;
	width: 145rpx;
	color: grey;
}
.title-icon{
	width: 60rpx;
	height: 50rpx;
}
.my-input{
	height: 70rpx;
	padding: 15rpx 25rpx;
	line-height: 70rpx;
	font-size: 32rpx;
	background: #FFF;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	border-radius: 20rpx;
}
.input-wrap{
	margin-left: 30rpx;
	margin-top: 12rpx;
	width: 690rpx;
}
.textarea-wrap{
	margin-left: 30rpx;
	margin-top: 12rpx;
	width: 690rpx;
}
.my-textarea{
	width: 690rpx;
	background:#FFF;
	padding:15rpx 25rpx;
	line-height: 1.6;
	font-size: 32rpx;
	height:300rpx;
	border-radius: 20rpx;
}
.my-switch-text{
	font-size: 34rpx;
	color: grey;
	height: 40rpx;
	width: 150rpx;
}
.button-margin-wrap{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 70rpx;
	margin-left: 30rpx;
	width: 690rpx;
}
.bg-gradual-button {
	width: 690rpx;
	height: 100rpx;
	border-radius: 50rpx;
	border-style: none;
	background-image: -webkit-linear-gradient(45deg, #56e3cf, #00aaff);
	background-image: linear-gradient(45deg, #56e3cf, #00aaff);
	color: #ffffff;
	font-size: 40rpx;
	text-align: center;
}
switch.red[checked] .wx-switch-input.wx-switch-input-checked,
switch.red.checked .uni-switch-input.uni-switch-input-checked{
	background-color: #e54d42 !important;
